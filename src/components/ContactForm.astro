<div id="container" class="flex flex-col items-center justify-center gap-4 p-4 max-w-3xl mx-auto">
    <section class="w-full">
        <h2 class="text-2xl font-bold">Contact</h2>
        <div class="flex flex-col items-start justify-start gap-4">
            <p class="text-base font-normal text-gray-500 dark:text-gray-400">If you want to contact me, fill out the form below.</p>
        </div>
        <form action="https://api.web3forms.com/submit" method="POST" class="flex flex-col gap-4">
            <input type="hidden" name="access_key" value="5f3a45f9-cd9d-4b6e-9ecd-dd6f8d9d4024">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" required class="p-2 border border-gray-200 dark:border-gray-700 rounded-md" />
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required class="p-2 border border-gray-200 dark:border-gray-700 rounded-md" />
            <label for="message">Message</label>
            <textarea name="message" id="message" rows="5" required class="p-2 border border-gray-200 rounded-md"></textarea>
            <button title="Send message" type="submit" class="cursor-pointer inline-block shrink-0 rounded-md border border-black bg-black px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-black focus:ring-3 focus:outline-hidden transition duration-200 ease-in-out"> Submit </button>
        </form>
        <div class="flex justify-center gap-4 mt-3">
            <a title="Go to index page" href="/">
                <button type="button" class="cursor-pointer inline-block shrink-0 rounded-md border border-black bg-black px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-black focus:ring-3 focus:outline-hidden transition duration-200 ease-in-out">
                    <i class="ri-arrow-left-line"></i> Back
                </button>
            </a>
        </div>
    </section>
</div>